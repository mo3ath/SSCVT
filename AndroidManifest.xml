<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.sscvt"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="10"
        android:targetSdkVersion="17" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/Theme.Styled" >
        <activity
            android:name=".Splash"
            android:label="@string/app_name"
            android:screenOrientation="portrait"
            android:theme="@android:style/Theme.NoTitleBar.Fullscreen" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Prayer Activity -->
        <activity
            android:name="com.sscvt.Prayer"
            android:configChanges="orientation|keyboardHidden|screenSize" >
        </activity>
        <!-- Ads Activity -->
        <activity
            android:name="com.sscvt.Ads"
            android:configChanges="orientation|keyboardHidden|screenSize" >
        </activity>
        <!-- Gallery Activity -->
        <activity
            android:name="com.sscvt.Gallery"
            android:configChanges="orientation|keyboardHidden|screenSize" >
        </activity>
        <!-- Arrivals Activity -->
        <activity
            android:name="com.sscvt.Arrivals"
            android:configChanges="orientation|keyboardHidden|screenSize" >
        </activity>
        <!-- Arrivals2 Activity -->
        <activity
            android:name="com.sscvt.Arrivals2"
            android:configChanges="orientation|keyboardHidden|screenSize" >
        </activity>
        <!-- Arrivals3 Activity -->
        <activity
            android:name="com.sscvt.Arrivals3"
            android:configChanges="orientation|keyboardHidden|screenSize" >
        </activity>
        <!-- Info Activity -->
        <activity
            android:name="com.sscvt.Info"
            android:configChanges="orientation|keyboardHidden|screenSize" >
        </activity>
        <!-- Contact Activity -->
        <activity
            android:name="com.sscvt.Contact"
            android:configChanges="orientation|keyboardHidden|screenSize" >
        </activity>
        <!-- Settings Activity -->
        <activity
            android:name="com.sscvt.helper.SettingsActivity"
            android:label="SettingsActivity" >
            <intent-filter>
                <action android:name="android.intent.action.MANAGE_NETWORK_USAGE" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
    </application>

</manifest>